<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Student.MainPage_Student.Book_Student.PageOne_Book__Fragment">

   <androidx.cardview.widget.CardView
       android:id="@+id/imageBack"
       android:layout_width="@dimen/_35sdp"
       android:layout_height="@dimen/_35sdp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
       android:padding="@dimen/_10sdp"
       android:layout_marginTop="@dimen/_20sdp"
       android:layout_marginStart="@dimen/_10sdp"
       android:layout_marginEnd="@dimen/_10sdp"
       app:cardCornerRadius="@dimen/_5sdp"
      android:backgroundTint="#E1E1E1"
       android:outlineAmbientShadowColor="@color/white"
       android:outlineSpotShadowColor="@color/white"
       >
      <ImageView
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_20sdp"
          android:src="@drawable/icon_back"

          android:layout_gravity="center"
          />

   </androidx.cardview.widget.CardView>


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="احجز مقعدك"
       android:id="@+id/textBasket"
       app:layout_constraintLeft_toLeftOf="@id/imageBack"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="@id/imageBack"
       app:layout_constraintBottom_toBottomOf="@id/imageBack"
       android:textSize="@dimen/_19sdp"
       android:textColor="#000000"
       android:fontFamily="@font/tajawal_medium"
       android:textStyle="normal"/>


   <ScrollView
       android:id="@+id/scrollView2"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_marginBottom="@dimen/_60sdp"
       android:layout_marginStart="@dimen/_10sdp"
       android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginEnd="@dimen/_10sdp"
       android:scrollbars="none"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textBasket">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <com.google.android.material.textfield.TextInputLayout
             android:id="@+id/etUserNameLayout_TextField"
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_15sdp"
             android:hint="اسم الطالب"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_reservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="textPersonName"
                app:hintTextColor="@color/orange" />
         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_15sdp"
             android:hint="رقم الهاتف"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phonNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="phone"
                app:hintTextColor="@color/orange" />
         </com.google.android.material.textfield.TextInputLayout>


         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_15sdp"
             android:hint="المحافظة"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <AutoCompleteTextView
                android:id="@+id/autoCompelete_City"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="none" />
         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_15sdp"
             android:hint="المديرية"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sub_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="textPersonName"
                app:hintTextColor="@color/orange" />
         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_15sdp"
             android:hint="الاشتراك"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <AutoCompleteTextView
                android:id="@+id/autoCompelete_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="none" />
         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_15sdp"
             android:hint="ذهاب وعودة"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <AutoCompleteTextView
                android:id="@+id/autoCompelete_go_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="none" />
         </com.google.android.material.textfield.TextInputLayout>

         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_15sdp"
             android:hint="نوع المركبة"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <AutoCompleteTextView
                android:id="@+id/autoCompelete_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="none" />
         </com.google.android.material.textfield.TextInputLayout>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_10sdp"
             android:fontFamily="@font/almarai"
             android:text="خط السير"
             android:textColor="@color/black"
             android:textSize="@dimen/_15sdp"
             android:textStyle="normal" />

         <Button
             android:layout_width="match_parent"
             android:layout_height="@dimen/_50sdp"
             android:backgroundTint="@color/gray"
             android:visibility="gone"
             android:fontFamily="@font/almarai"
             android:text="حدد العنوان علي الخريطة"
             android:textColor="@color/white"
             android:textSize="@dimen/_15sdp" />

         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:enabled="false"
             android:hint="العنوان الذي تم تحديده علي الخريطة"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/map_ET"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:inputType="phone"
                app:hintTextColor="@color/orange" />
         </com.google.android.material.textfield.TextInputLayout>

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/_50sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonMap"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/orange"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:cardCornerRadius="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

               <ImageView
                   android:layout_width="@dimen/_50sdp"
                   android:layout_height="match_parent"
                   android:fontFamily="@font/almarai"
                   android:padding="@dimen/_10sdp"
                   android:src="@drawable/location"
                   android:textColor="@color/white"
                   android:tint="@color/white"
                   app:layout_constraintLeft_toLeftOf="parent"
                   tools:ignore="UseAppTint" />
            </androidx.cardview.widget.CardView>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="عنواني"
                android:enabled="false"
                android:layout_marginLeft="@dimen/_10sdp"
                app:hintTextColor="@color/orange"
                app:layout_constraintLeft_toRightOf="@+id/buttonMap"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/from"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:fontFamily="@font/almarai"
                   android:inputType="textPersonName"
                   app:hintTextColor="@color/orange" />
            </com.google.android.material.textfield.TextInputLayout>

         </androidx.constraintlayout.widget.ConstraintLayout>


         <com.google.android.material.textfield.TextInputLayout
             style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_10sdp"
             android:hint="المدرسة"
             app:hintTextColor="@color/orange"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai"
                android:id="@+id/to"
                android:inputType="textPersonName"
                app:hintTextColor="@color/orange" />
         </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>

   </ScrollView>

   <LinearLayout
       android:id="@+id/realtive_button_next"
       android:layout_width="match_parent"
       android:layout_height="@dimen/_60sdp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:background="@drawable/background_gradian"
       app:layout_constraintStart_toStartOf="parent"
       >
      <Button
          android:id="@+id/button_Next"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_50sdp"
          android:fontFamily="@font/almarai"
          android:layout_gravity="center"
          android:text="التالي"
          android:layout_marginTop="@dimen/_5sdp"
          android:layout_marginStart="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_10sdp"

          android:layout_marginBottom="@dimen/_5sdp"
          android:textColor="@color/white"
          android:textSize="@dimen/_15sdp"
        />
   </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>