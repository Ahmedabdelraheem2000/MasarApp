<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UI.Student.MainPage_Student.Setting_Student_Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:backgroundTint="#E1E1E1"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            >
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/icon_back"

                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اعدادات التطبيق"
            android:id="@+id/textBasket"
            app:layout_constraintLeft_toLeftOf="@id/imageBack"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageBack"
            app:layout_constraintBottom_toBottomOf="@id/imageBack"
            android:textSize="@dimen/_19sdp"
            android:textColor="#000000"
            android:fontFamily="@font/tajawal_medium"
            android:textStyle="normal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearAccount"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="40dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        android:background="@android:color/transparent"
        android:gravity="right"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/almarai"
            android:text="من نحن"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/profile"
            android:tint="@color/black"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPolicy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        android:background="@android:color/transparent"
        android:gravity="right"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/almarai"
            android:text="السياسة والخصوصية"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/policy"
            android:tint="@color/black"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineardeleteAccount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"

        android:background="@android:color/transparent"
        android:gravity="right"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/almarai"
            android:text="حذف الحساب"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <Space
            android:layout_width="10dp"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/deleteaccount"
            android:tint="@color/black"
            tools:ignore="UseAppTint" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_SignIn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:text="تسجيل الدخول"
        android:visibility="gone"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:fontFamily="@font/almarai"
        android:layout_gravity="center"
        android:textSize="@dimen/_15sdp"
        />
    <RelativeLayout
        android:id="@+id/buttonSignOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:background="@drawable/backgroud_botton"
        android:clickable="true"
        android:backgroundTint="#DADADA"
        android:layout_marginTop="@dimen/_13sdp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewForgetPassword">

        <TextView
            android:id="@+id/text_signOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/almarai"
            android:text="تسجيل الخروج"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressbar_signOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/white"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
