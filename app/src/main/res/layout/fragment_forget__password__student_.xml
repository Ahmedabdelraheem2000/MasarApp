<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    tools:context=".UI.Student.Regiter_Student.Forget_Password_Student_Fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="لقد تسيت كلمة السر"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/almarai"
        android:textAlignment="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ادخل بريدك الاليكتروني وتلقي رمز يصلك علي الايميل"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/somar"
        android:textAlignment="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="البريد الالكتروني"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="@dimen/_15sdp"
        app:hintTextColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_ForgetPassword"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:fontFamily="@font/almarai"
            android:layout_height="wrap_content"
            app:hintTextColor="@color/orange" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/button_faqStudent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/almarai"
        android:text="ارسال"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_5sdp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/almarai"
        android:text="رجوع"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>