<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/_10sdp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Student.MainPage_Student.FAQ_Student_Fragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تقديم شكوي"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/almarai"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20sdp"
        />
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:hint="عنوان الشكوي"
        app:hintTextColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/faqTitle_Student"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almarai"
            android:inputType="textPersonName"
            app:hintTextColor="@color/orange" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:hint="اكتب شكوتك"

        app:hintTextColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSignIn2">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/faq_Student"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:lineSpacingExtra="5dp"
            android:fontFamily="@font/almarai"
            app:hintTextColor="@color/orange" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/button_faqStudent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/almarai"
        android:text="قدم شكوي"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_5sdp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/almarai"
        android:text="رجوع"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>