<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.Student.MainPage_Student.HomePage_Student_Fragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <ImageView
           android:layout_width="@dimen/_100sdp"
           android:layout_height="@dimen/_50sdp"
           android:src="@drawable/logo"
           android:layout_marginBottom="@dimen/_5sdp"
           android:layout_gravity="center"
           app:tint="@color/orange" />

       <LinearLayout
           android:id="@+id/lineardeleteAccount"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:foreground="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
           android:background="@android:color/transparent"
           android:gravity="right"
           android:layout_marginTop="@dimen/_20sdp"
           android:layout_marginLeft="@dimen/_15sdp"
           android:orientation="horizontal"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textStyle="bold"
               android:fontFamily="@font/almarai"
               android:text="حذف الحساب"
               android:textColor="@color/black"
               android:textSize="16sp"
               />

           <Space
               android:layout_width="10dp"
               android:layout_height="0dp" />

           <ImageView
               android:layout_width="@dimen/_20sdp"
               android:layout_height="wrap_content"
               android:adjustViewBounds="true"
               android:src="@drawable/deleteaccount"
               android:tint="@color/black"
               tools:ignore="UseAppTint" />
       </LinearLayout>


       <androidx.cardview.widget.CardView
           android:id="@+id/reseave_seet_Student_Card"
           android:layout_width="match_parent"
           app:cardCornerRadius="@dimen/_5sdp"
           android:clickable="true"
           android:foreground="?attr/selectableItemBackgroundBorderless"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_height="@dimen/_150sdp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/resive_seet_student"
               android:scaleType="centerCrop"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/info_Student_Card"
           android:layout_width="match_parent"
           android:clickable="true"
           android:foreground="?attr/selectableItemBackgroundBorderless"
           app:cardCornerRadius="@dimen/_5sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_height="@dimen/_150sdp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/info_student"
               android:scaleType="centerCrop"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/allReseave_Student_Card"
           android:layout_width="match_parent"
           app:cardCornerRadius="@dimen/_5sdp"
           android:clickable="true"
           android:foreground="?attr/selectableItemBackgroundBorderless"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_height="@dimen/_150sdp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/all_reseave_student"
               android:scaleType="centerCrop"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/FAQ_Student_Card"
           android:layout_width="match_parent"
           android:clickable="true"
           android:foreground="?attr/selectableItemBackgroundBorderless"
           app:cardCornerRadius="@dimen/_5sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_height="@dimen/_150sdp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/fap"
               android:scaleType="centerCrop"
               />
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/setting_Student_Card"
           android:clickable="true"
           android:foreground="?attr/selectableItemBackgroundBorderless"
           android:layout_width="match_parent"
           app:cardCornerRadius="@dimen/_5sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_height="@dimen/_150sdp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:src="@drawable/setting_app"
               android:scaleType="centerCrop"
               />
       </androidx.cardview.widget.CardView>
   </LinearLayout>

</ScrollView>