<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    android:layout_weight="1"
    tools:context=".UI.FirstPage_Fragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اختر نوع الحساب"
            android:gravity="bottom|center"
            android:fontFamily="@font/almarai"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_20sdp"
            />

        <LinearLayout
            android:gravity="top|center"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_Student"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/frame1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_weight="0.5"
                />



            <ImageView
                android:id="@+id/button_Delivery"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/car1"
                android:layout_weight="0.5"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                />


        </LinearLayout>
        <ImageView
            android:id="@+id/companyAccount"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/office"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            />

    </LinearLayout>


</ScrollView>