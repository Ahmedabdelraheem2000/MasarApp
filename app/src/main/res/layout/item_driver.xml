<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageDriver"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:fontFamily="@font/almarai"
            android:maxLines="1"
            android:text="أحمد عبدالرحيم مبارك"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/imageDriver"
            app:layout_constraintTop_toTopOf="@+id/imageDriver" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almarai"
            android:text="نوع المركبة :"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintRight_toLeftOf="@+id/imageDriver"
            app:layout_constraintTop_toBottomOf="@+id/nameDriver"
            android:layout_marginRight="@dimen/_15sdp"
            />

        <TextView
            android:id="@+id/typeVechile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_2sdp"
            android:fontFamily="@font/almarai"
            android:text="باص"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/type"
            app:layout_constraintRight_toLeftOf="@+id/type"
            app:layout_constraintTop_toTopOf="@+id/type" />


        <TextView
            android:id="@+id/stateDriverTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/almarai"
            android:text="الحالة"
            android:textColor="@color/gray"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/type"
            app:layout_constraintTop_toBottomOf="@+id/type"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/stateDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_2sdp"
            android:fontFamily="@font/almarai"
            android:text="تعمل"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/stateDriverTV"
            app:layout_constraintRight_toLeftOf="@+id/stateDriverTV"
            app:layout_constraintTop_toTopOf="@+id/stateDriverTV" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>